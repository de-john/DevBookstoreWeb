<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>bookQuery</servlet-name>
        <servlet-class>com.bookstorer.bookquery</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookQuery</servlet-name>
        <url-pattern>/bookQuery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>purchaseBook</servlet-name>
        <servlet-class>com.bookstorer.purchasebook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>purchaseBook</servlet-name>
        <url-pattern>/purchaseBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addOrder</servlet-name>
        <servlet-class>com.bookstorer.addorder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addOrder</servlet-name>
        <url-pattern>/addOrder</url-pattern>
    </servlet-mapping>

</web-app>